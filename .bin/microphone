#!/bin/zsh

is_muted=$(pactl get-source-mute @DEFAULT_SOURCE@ | awk '{print $2}')

if [ "$is_muted" = "yes" ]; then
    icon="󰍭"
    msg="Microphone Muted"
else
    icon="󰍬"
    msg="Microphone Active"
fi

dunstify -h string:x-dunst-stack-tag:microphone \
         -t 2000 \
         "$icon Microphone" \
         "$msg"
